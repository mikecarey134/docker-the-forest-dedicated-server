#!/bin/bash
# The following are default values.
# They can be overridden by supplying the -e VAR=value option to the containerizer.

# The timezone this container is running in
TIME_ZONE=${TIME_ZONE:-Etc/UTC}

# steam game appid
STEAM_APP_ID=${STEAM_APP_ID:-556450}

#dedicated server related values
SERVER_IP=${SERVER_IP:-0.0.0.0}
#ports will need to be forwarded from router or cloud service
SERVER_STEAM_PORT=${SERVER_STEAM_PORT:-8766}
SERVER_GAME_PORT=${SERVER_GAME_PORT:-27015}
SERVER_QUERY_PORT=${SERVER_QUERY_PORT:-27016}

#server name that shows in the forest UI
SERVER_NAME=${SERVER_NAME:-The Forest Dedicated Server}

#game configuration settings
SERVER_PLAYERS=${SERVER_PLAYERS:-4}
ENABLE_VAC=${ENABLE_VAC-on}
SERVER_PASSWORD=${SERVER_PASSWORD-}
SERVER_PASSWORD_ADMIN=${SERVER_PASSWORD_ADMIN-}
SERVER_STEAM_ACCOUNT=${SERVER_STEAM_ACCOUNT-}
SERVER_AUTOSAVE_INTERVAL=${SERVER_AUTOSAVE_INTERVAL-15}
DIFFICULTY=${DIFFICULTY-Normal}
INIT_TYPE=${INIT_TYPE-Continue}
SLOT=${SLOT-1}
SHOW_LOGS=${SHOW_LOGS-off}
SERVER_CONTACT=${SERVER_CONTACT-email@gmail.com}
VEGAN_MODE=${VEGAN_MODE-off}
VEGETARIAN_MODE=${VEGETARIAN_MODE-off}
RESET_HOLES_MODE=${RESET_HOLES_MODE-off}
TREE_REGROW_MODE=${TREE_REGROW_MODE-off}
ALLOW_BUILDING_DESTRUCTION=${ALLOW_BUILDING_DESTRUCTION-on}
ALLOW_ENEMIES_CREATIVE_MODE=${ALLOW_ENEMIES_CREATIVE_MODE-off}
ALLOW_CHEATS=${ALLOW_CHEATS-off}
REALISTIC_PLAYER_DAMAGE=${REALISTIC_PLAYER_DAMAGE-off}
